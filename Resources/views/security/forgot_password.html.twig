{% extends "@GalvesbandTraUser/layout.html.twig" %}

{% block tra_user_stylesheets %}
    <style>
        form#forgot-password-form {
            max-width: 330px;
            padding: 15px;
            margin: 0 auto;
        }

        .form-control {
            position: relative;
            height: auto;
            -webkit-box-sizing: border-box;
            -moz-box-sizing: border-box;
            box-sizing: border-box;
            padding: 10px;
            font-size: 16px;
        }

        input#username {
            margin-bottom: -1px;
            border-bottom-right-radius: 0;
            border-bottom-left-radius: 0;
        }
        input#email {
            margin-bottom: 10px;
            border-top-left-radius: 0;
            border-top-right-radius: 0;
        }

        div#error-message {
            max-width: 300px;
            margin: 10px auto;
        }
    </style>
{% endblock %}

{% block tra_user_title %}
    {{ 'Password Recovery'|trans({}, 'GalvesbandTraUserBundle') }}
{% endblock tra_user_title %}

{% block tra_user_content %}

    <form id="forgot-password-form" action="{{ path('forgot_password') }}" method="post">
        <h2>{{ 'Password Recovery'|trans({}, 'GalvesbandTraUserBundle') }}</h2>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <label for="username" class="sr-only">{{ 'User name'|trans({}, 'GalvesbandTraUserBundle') }}</label>
        <input type="text" class="form-control" id="username" name="username" placeholder="{{ 'User name'|trans({}, 'GalvesbandTraUserBundle') }}" required autofocus>

        <label for="email" class="sr-only">{{ 'Email'|trans({}, 'GalvesbandTraUserBundle') }}</label>
        <input type="text" class="form-control" id="email" name="email" placeholder="{{ 'Email'|trans({}, 'GalvesbandTraUserBundle') }}" required>

        <button class="btn btn-lg btn-primary btn-block" type="submit">{{ 'Recover password'|trans({}, 'GalvesbandTraUserBundle') }}</button>
    </form>

{% endblock tra_user_content %}
